<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vlopmartin.apps.kanjipractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EditPracticeSetActivity"
            android:label="@string/title_activity_edit_practice_set"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vlopmartin.apps.kanjipractice.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.NewKanjiActivity"
            android:label="@string/title_activity_new_kanji"
            android:parentActivityName=".activities.EditPracticeSetActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vlopmartin.apps.kanjipractice.activities.EditPracticeSetActivity" />
        </activity>
        <activity
            android:name=".activities.PracticeActivity"
            android:label="@string/title_activity_practice"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vlopmartin.apps.kanjipractice.activities.MainActivity" />
        </activity>
    </application>

</manifest>